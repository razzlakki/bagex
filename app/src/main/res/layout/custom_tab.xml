<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <com.tezsol.bagex.custom.ui.BagexTextView
        android:id="@+id/txt_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAppearance="?attr/tabTextAppearance"
        android:textColor="@drawable/tab_text_color"
        android:textSize="12sp" />

    <com.tezsol.bagex.custom.ui.BagexTextView
        android:id="@+id/txt_tab_badge"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/tab_badge_background"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="6dp"
        android:paddingBottom="3dp"
        android:text="0"
        android:textColor="@drawable/badge_text_color"
        android:textSize="8sp"
        android:textStyle="bold" />

</LinearLayout>